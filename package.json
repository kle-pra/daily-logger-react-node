{
  "name": "daily-log-react-node",
  "version": "1.0.0",
  "description": "Simple react application to log your daily activity with node backend",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "watch": "nodemon server.js",
    "frontend": "npm start --prefix frontend",
    "start-dev": "concurrently \"npm run watch\" \"npm run frontend\"",
    "build": "npm install && npm install --prefix frontend && npm run build --prefix frontend",
    "postbuild": "npm run deploy",
    "deploy": "cp -fr frontend/build/** ./static",
    "heroku-postbuild": "npm run build",
    "test": "export NODE_ENV=test || SET NODE_ENV=test && mocha **/*.test.js",
    "test-watch": "nodemon --exec 'npm test'"
  },
  "keywords": [
    "react",
    "node",
    "mongo",
    "bootstrap",
    "daily",
    "log",
    "logger",
    "diary"
  ],
  "author": "kle-pra",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.2.3",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "mongodb": "3.1.1"
  },
  "devDependencies": {
    "concurrently": "^3.6.1",
    "expect": "^23.5.0",
    "mocha": "^5.2.0",
    "supertest": "^3.1.0"
  }
}
